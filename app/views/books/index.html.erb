<%= render 'layouts/error_message', model: @book %>

<%= render "layouts/side_bar", {user: @user, book: @book} %>
<div class="col-xs-9">

	<h2>Books</h2>

	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td>
					<%= link_to(user_path(book.user_id)) do %>
						<%= attachment_image_tag book.user, :profile_image, :fill, 40,40, fallback: "no_image.jpg", size:'40x40' %>
					<% end %>
				</td>
				<td><%= link_to book.title, book_path(book.id) %></td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

</div>