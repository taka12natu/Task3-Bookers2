<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>

<nav class="navbar navbar-inverse navbar-static-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <h4 class="navbar-left" style="color:white;">Bookers</h4>
    </div>

    <div class="collapse navbar-collapse" id="navbarEexample1">


      <% if user_signed_in? %>

      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to(user_path(current_user.id)) do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
              <% end %>
          </li>
          <li><%= link_to(users_path) do %>
              <span class="glyphicon glyphicon-user" aria-hidden="true" > Users</span>
              <% end %>
          </li>
          <li><%= link_to(books_path) do %>
              <span class="glyphicon glyphicon-book" aria-hidden="true"> Books</span>
              <% end %>
          </li>
          <li><%= link_to(destroy_user_session_path, method: :delete) do %>
              <span class="glyphicon glyphicon-log-in" aria-hidden="true"> logout</span>
              <% end %>
          </li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to(root_path) do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
              <% end %>
          </li>
          <li><%= link_to(home_about_path) do %>
              <span class="glyphicon glyphicon-link" aria-hidden="true" > About</span>
              <% end %>
          </li>
          <li><%= link_to(new_user_registration_path) do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"> sign up</span>
              <% end %>
          </li>
          <li><%= link_to(new_user_session_path) do %>
              <span class="glyphicon glyphicon-log-in" aria-hidden="true"> login</span>
              <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>
</header>

<body>
  <div class="container">
    <div class="row">
    <%= yield %>
   </div>
 </div>
</body>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">CopyRight Infratop.inc</div>
    </div>
  </div>
</footer>
</html>
